<div class="row">
  <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns">
    <h2 class="no-top">Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", :object => f.object %>

      <%= f.label :section %>
      <%= f.select :section, User.section_names, :prompt => "Please select your HBS section" %>
      <br>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "At least 8 characters" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Sign up", :class => "button small" %>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div><!-- .row -->