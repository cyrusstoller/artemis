<h2>Section List</h2>

<table>
  <thead>
    <tr>
      <th class="center">Section</th>
      <th class="center">Count</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @section_count.each do |k,v| %>
      <tr>
        <td class="center"><%= link_to k, admin_user_list_path(:section => k) %></td>
        <td class="center"><%= v %></td>
        <td>
          <ul class="button-group radius">
            <li>
              <%= link_to "Activate", admin_activate_section_path(:section => k), :method => :patch, 
                 :class => "button success tiny no-bottom" %>
            </li>
            <li>
              <%= link_to "Deactivate", admin_deactivate_section_path(:section => k), :method => :patch, 
                :class => "button warning tiny no-bottom" %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>